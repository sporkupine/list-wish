<h1>Signup Form Will Go Here</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with(model: @user, class: "shadow p-3 rounded bg-dark text-light mb-2") do |form| %>
        <div class="form-group mb-1">
          <%= form.label :email, class: "col-2 col-form-label" %>
          <div class="col-12">
            <%= form.text_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="form-group mb-1">
          <%= form.label :password, class: "col-2 col-form-label" %>
          <div class="col-12">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a secure password" %>
          </div>
        </div>
        <div class="form-group-row text-center mt-4">
          <%= form.submit class: "btn btn-lg btn-outline-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>