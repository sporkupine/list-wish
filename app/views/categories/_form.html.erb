<%= render 'shared/errors', obj: @category %>

<%= form_with( model: @category, class: "shadow rounded p-3 mb-2 bg-dark text-light", local: true ) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name, "Name:", class: "col-2 col-form-label", placeholder: "Category name" %>
    <%= form.text_field :name, class: "form-control shadow rounded" %>
  </div>
  <div class="form-group-row d-flex justify-content-center my-1">
    <%= form.submit class: "btn btn-outline-warning" %>
  </div>

<% end %>