<h1 class="text-center">User Index</h1>

<div class="container">
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-md-3">
      <div class="card">
        <div class="card-header">
          <h5>
            <%= user.username %>
            <p class="text-muted fs-6">
              Joined
                <%= time_ago_in_words(user.created_at) %> ago
            </p>
          </h5>
        </div>
        <div class="card-body">

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>